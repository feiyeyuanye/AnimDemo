<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type_ofargb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ofArgb"/>

        <TextView
            android:id="@+id/tv_type_ofHsv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ofHsv"/>

        <TextView
            android:id="@+id/tv_type_ofObject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ofObject"/>
        <TextView
            android:id="@+id/tv_type_holder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ValuesHolder"/>
        <TextView
            android:id="@+id/tv_type_AnimatorSet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AnimatorSet"/>
        <TextView
            android:id="@+id/tv_type_key"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ofKeyframe"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.animapplication.view.CircleView
            android:visibility="gone"
            android:id="@+id/view_type_argb"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <com.example.animapplication.view.OfObjectView
            android:visibility="gone"
            android:id="@+id/view_type_ofObject"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_type_holder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
        <com.example.animapplication.view.ObjectAnimatorView
            android:visibility="gone"
            android:background="@android:color/darker_gray"
            android:id="@+id/view_type_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>


</LinearLayout>