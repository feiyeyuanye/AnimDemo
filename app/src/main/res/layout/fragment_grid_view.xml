<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/rg_grid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <RadioButton
            android:button="@null"
            android:id="@+id/rb_grid_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="layoutAnimation"/>
        <RadioButton
            android:button="@null"
            android:id="@+id/rb_grid_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="gridLayoutAnimation"/>
        <RadioButton
            android:button="@null"
            android:id="@+id/rb_grid_thr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="gridLayoutAnimation"/>
        <RadioButton
            android:button="@null"
            android:id="@+id/rb_grid_fou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="gridLayoutAnimation"/>
    </RadioGroup>
    <GridView
        android:layout_marginTop="45dp"
        android:id="@+id/gv_fragment"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </GridView>
</FrameLayout>